<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.1" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd">
    
    <!-- Define the servlets -->
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>sparks.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComplaintServlet</servlet-name>
        <servlet-class>sparks.ComplaintServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateComplaintServlet</servlet-name>
        <servlet-class>sparks.UpdateComplaintServlet</servlet-class>
    </servlet>

    <!-- Define servlet mappings -->
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComplaintServlet</servlet-name>
        <url-pattern>/ComplaintServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateComplaintServlet</servlet-name>
        <url-pattern>/UpdateComplaintServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
            Landing.html
        </welcome-file>
    </welcome-file-list>
</web-app>
